mixin colors__plate(color)
  -
    const COLOR_NAMES = {
      'Dark Shade 100%': 'dark-shade-100',
      'Dark Shade 75%': 'dark-shade-75',
      'Dark Shade 50%': 'dark-shade-50',
      'Dark Shade 25%': 'dark-shade-25',
      'Dark Shade 5%': 'dark-shade-5',
      'Purple': 'purple',
      'Green': 'green'
    }

  if color
    - const MODIFIER = `colors__plate_color_${COLOR_NAMES[color]}`;
    .colors__plate(class=MODIFIER)&attributes(attributes)
  else
    .colors__plate